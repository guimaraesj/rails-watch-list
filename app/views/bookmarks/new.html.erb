<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="form-inputs">
    <%# a associação é com a tabela, não com a coluna da tabela: %>
    <%= f.association :movie %>
    <%= f.input :comment %>
  </div>
  <div class="form-actions btn btn-primary">
    <%= f.button :submit %>
  </div>
<% end %>

